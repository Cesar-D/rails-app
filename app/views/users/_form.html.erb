<section class="flex flex-col items-center justify-center m-20 px-10 border-2 border-gray-300 rounded-lg shadow-lg">
    <h1 class="main-title"><%= title %></h1>
    <div class="w-full mb-10">
        <%= form_with(model: @user, class: "flex flex-col w-full") do |form| %>
            <% if @user.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <div>
                <%= form.label :email, class: "label-form" %>
                <%= form.email_field :email, class: "field-form" %>
            </div>
            
            <div>
                <%= form.label :password, class: "label-form" %>
                <%= form.password_field :password, class: "field-form" %>
            </div>
            
            <div>
                <%= form.label :password_confirmation, class: "label-form" %>
                <%= form.password_field :password_confirmation, class: "field-form" %>
            </div>
            
            <div class="mt-10 flex justify-center items-center">
                <%= form.submit buttonText, class: "btn-primary bg-green-500" %>
            </div>
        <% end %>
    </div>
</section>
    