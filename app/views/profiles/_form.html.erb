<section class="flex flex-col items-center justify-center m-20 px-10 border-2 border-gray-300 rounded-lg shadow-lg">
  <h1 class="main-title"><%= title %></h1>
  <div class="w-full mb-10">
    <%= form_with(model: profile, class: "flex flex-col w-full") do |form| %>
      <% if profile.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

          <ul>
            <% profile.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name , class: "label-form" %>
        <%= form.text_field :name, class: "field-form" %>
      </div>

      <div>
        <%= form.label :city, class: "label-form" %>
        <%= form.text_field :city, class: "field-form" %>
      </div>

      <div>
        <%= form.label :country, class: "label-form" %>
        <%= form.text_field :country, class: "field-form" %>
      </div>

      <div>
        <%= form.label :birthh, class: "label-form" %>
        <%= form.date_field :birthh, class: "field-form" %>
      </div>

      <div class="mb-5 flex items-center gap-5">
        <div class="my-auto">
          <%= form.radio_button :gender, "Male" %>
          <%= form.label :gender, "Male", class: "label-form" %>
        </div>
        <div class="my-auto ">
          <%= form.radio_button :gender, "Female" %>
          <%= form.label :gender, "Female", class: "label-form" %>
        </div>
      </div>
      <div class="mt-10 flex justify-center items-center">
        <%= form.submit "Create Profile", class: "btn-primary bg-green-500" %>
      </div>

    <% end %>
  </div>
</section>