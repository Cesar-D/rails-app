<h1>Log in</h1>
<div>
    <%= form_with(scope: :session, url: new_user_session_path) do |form| %>
        <div>
            <%= form.label :email %>
            <%= form.email_field :email, required: true %>
        </div>
        
        <div>
            <%= form.label :password %>
            <%= form.password_field :password, required: true %>
        </div>
        
        <div>
            <%= form.submit "Log In" %>
        </div>
    <% end %>
</div>